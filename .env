# App Version
VITE_APP_VERSION=v1.0

# Bot Sleep Timeout (milliseconds) - how long before bot falls asleep when idle
VITE_BOT_SLEEP_TIMEOUT=15000

# Snow Configuration

VITE_SNOW_COUNT=10             #จำนวนเกล็ดหิมะทั้งหมดที่จะปรากฏบนหน้าจอพร้อมกัน
VITE_SNOW_MIN_SIZE=1.0          #ขนาดเล็กที่สุดที่เป็นไปได้ของเกล็ดหิมะ
VITE_SNOW_MAX_SIZE=5.8          #ขนาดใหญ่ที่สุดที่เป็นไปได้ของเกล็ดหิมะ
VITE_SNOW_MIN_DURATION=10       #ระยะเวลาสั้นที่สุดที่เกล็ดหิมะจะตกจากด้านบนไปด้านล่างของหน้าจอ (วินาที)
VITE_SNOW_MAX_DURATION=25       #ระยะเวลายาวที่สุดที่เกล็ดหิมะจะตกจากด้านบนไปด้านล่างของหน้าจอ (วินาที)
VITE_SNOW_OPACITY=1             #ความทึบของเกล็ดหิมะ (0 = โปร่งใส, 1 = ทึบ)


# Typing delay per character in milliseconds (smaller -> faster typing). Use an integer (e.g. 6).
# If both variables are present, VITE_BOT_TYPING_DELAY_MS takes precedence.
VITE_BOT_TYPING_DELAY_MS=0
# Minimal typing indicator duration in milliseconds (set to 0 to disable). Example: 120
VITE_BOT_TYPING_INDICATOR_MS=0
# Legacy name for compatibility (kept for backward compatibility; value ignored when VITE_BOT_TYPING_DELAY_MS is set)
VITE_BOT_TYPING_SPEED=0

# Auto open chatbot on load (true = เปิดอัตโนมัติ, false = ปิด)
VITE_AUTO_OPEN_CHATBOT=true

# AI Greeting Image Mouse Tracking Effect (true = เปิด, false = ปิด)
# When enabled, the AI greeting image will appear to "watch" the cursor as it moves
VITE_AI_GREET_MOUSE_TRACKING=true

